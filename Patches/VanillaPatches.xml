<Patch>

<!-- Add chocolate eggs to the "eat chocolate" joygiver -->
<Operation Class="PatchOperationAdd">
		<xpath>Defs/JoyGiverDef[defName="EatChocolate"]/thingDefs</xpath>
		<value>
			<li>Bunnies_ChocolateEgg</li>
		</value>
	</Operation>
	
	
	
