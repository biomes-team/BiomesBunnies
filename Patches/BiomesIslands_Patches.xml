						<Bunnies_ChocolateRabbit>0.15</Bunnies_ChocolateRabbit>
						<Bunnies_DustBunny>0.6</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.15</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.1</Bunnies_HoptimusPrime>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_DesertIsland"]/wildAnimals</xpath>
