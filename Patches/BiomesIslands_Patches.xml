<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes Islands</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_Atoll"]/wildAnimals</xpath>
					<value>
						<Placeholder>99999999</Placeholder>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_BorealIsland"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.15</BBun_ChocolateRabbit>
						<BBun_DustBunny>0.6</BBun_DustBunny>
						<BBun_Hoptimus>0.15</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.1</BBun_HoptimusPrime>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_DesertIsland"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.1</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.05</BBun_HoptimusPrime>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_TemperateIsland"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.05</BBun_ChocolateRabbit>
						<BBun_DustBunny>0.4</BBun_DustBunny>
						<BBun_Hoptimus>0.2</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.05</BBun_HoptimusPrime>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_TropicalIsland"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.05</BBun_ChocolateRabbit>
						<BBun_Hoptimus>0.3</BBun_Hoptimus>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="BiomesIslands_TundraIsland"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.07</BBun_ChocolateRabbit>
						<BBun_DustBunny>0.8</BBun_DustBunny>
						<BBun_Hoptimus>0.1</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.2</BBun_HoptimusPrime>
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>

