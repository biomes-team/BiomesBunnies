<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Realistic Planets - Fan Update</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			<!-- temperate-cold grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Grassland"]/wildAnimals</xpath>
					<value>
						<Bunnies_ChocolateRabbit>0.07</Bunnies_ChocolateRabbit>
						<Bunnies_DustBunny>0.8</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.1</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.2</Bunnies_HoptimusPrime>
					</value>
				</li>
				
			<!-- warm-hot grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Savanna"]/wildAnimals</xpath>
					<value>
						<Bunnies_DustBunny>0.2</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.1</Bunnies_Hoptimus>
					</value>
				</li>
				
			<!-- cold grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Steppes"]/wildAnimals</xpath>
					<value>
						<Bunnies_ChocolateRabbit>0.15</Bunnies_ChocolateRabbit>
						<Bunnies_DustBunny>0.5</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.1</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.2</Bunnies_HoptimusPrime>
					</value>
				</li>
				
			<!-- temperate-cold desert -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_TemperateDesert"]/wildAnimals</xpath>
					<value>
						<Bunnies_DustBunny>0.4</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.1</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.15</Bunnies_HoptimusPrime>
					</value>
				</li>
				
			<!-- tundra -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Permafrost"]/wildAnimals</xpath>
					<value>
						<Bunnies_Caerbunny>0.1</Bunnies_Caerbunny>
						<Bunnies_DustBunny>0.6</Bunnies_DustBunny>
						<Bunnies_HoptimusPrime>0.5</Bunnies_HoptimusPrime>
					</value>
				</li>
				
			<!-- sparse oasis -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Oasis"]/wildAnimals</xpath>
					<value>
						<Bunnies_Hoptimus>0.3</Bunnies_Hoptimus>
					</value>
				</li>
					
			</operations>
		</match>
	</Operation>


</Patch>
