<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Biomes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
			<!-- hostile rainforest -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_FeraliskInfestedJungle"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.2</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.15</BBun_HoptimusPrime>
					</value>
				</li>
				
			<!-- hot, arid-desert -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_GallatrossGraveyard"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.2</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.1</BBun_HoptimusPrime>
					</value>
				</li>
				
			<!-- temperate swamp -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_GelatinousSuperorganism"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.02</BBun_ChocolateRabbit>
						<BBun_DustBunny>0.4</BBun_DustBunny>
						<BBun_Hoptimus>0.15</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.1</BBun_HoptimusPrime>
					</value>
				</li>
				
			<!-- temperate-hot? very barren -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_MechanoidIntrusion"]/wildAnimals</xpath>
					<value>
						<BBun_HoptimusPrime>0.05</BBun_HoptimusPrime>
					</value>
				</li>
				
			<!-- wet rainforest -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_MycoticJungle"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.3</BBun_Hoptimus>
					</value>
				</li>
				
			<!-- hostile temperate forest? -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_OcularForest"]/wildAnimals</xpath>
					<value>
						<BBun_Caerbunny>0.05</BBun_Caerbunny>
					</value>
				</li>
				
			<!-- cold, hostile-barren -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_PropaneLakes"]/wildAnimals</xpath>
					<value>
						<BBun_Caerbunny>0.1</BBun_Caerbunny>
					</value>
				</li>
				
			<!-- arid, fiery 
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_PyroclasticConflagration"]/wildAnimals</xpath>
					<value>
						<Placeholder>99999999</Placeholder>
					</value>
				</li>-->
				
			<!-- dark, cave 
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_RockyCrags"]/wildAnimals</xpath>
					<value>
						<Placeholder>99999999</Placeholder>
					</value>
				</li>-->
				
			<!-- arid-desert, temperate? -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="AB_TarPits"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.1</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.05</BBun_HoptimusPrime>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>


</Patch>

