<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Advanced Biomes (Continued)</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="PoisonForest"]/wildAnimals</xpath>
					<value>
						<BBun_HoptimusPrime>0.2</BBun_HoptimusPrime>
					</value>
				</li>
					
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="Savanna"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.1</BBun_Hoptimus>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="Volcano"]/wildAnimals</xpath>
					<value>
						<BBun_HoptimusPrime>0.3</BBun_HoptimusPrime>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="Wasteland"]/wildAnimals</xpath>
					<value>
						<BBun_Hoptimus>0.1</BBun_Hoptimus>
						<BBun_HoptimusPrime>0.05</BBun_HoptimusPrime>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="Wetland"]/wildAnimals</xpath>
					<value>
						<BBun_ChocolateRabbit>0.08</BBun_ChocolateRabbit>
