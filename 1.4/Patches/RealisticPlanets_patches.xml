<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Realistic Planets - Fan Update</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			<!-- temperate-cold grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Grassland"]/wildAnimals</xpath>
					<value>
						<Bunnies_ChocolateRabbit>0.04</Bunnies_ChocolateRabbit>
						<Bunnies_DustBunny>0.3</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.08</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.1</Bunnies_HoptimusPrime>
						<Bunnies_Rabbuck>0.2</Bunnies_Rabbuck>
						<Bunnies_EmpireRabbit>0.05</Bunnies_EmpireRabbit>
						<Bunnies_Microbunny>0.1</Bunnies_Microbunny>
					</value>
				</li>
				
			<!-- warm-hot grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Savanna"]/wildAnimals</xpath>
					<value>
						<Bunnies_DustBunny>0.1</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.1</Bunnies_Hoptimus>
						<Bunnies_Rabbuck>0.2</Bunnies_Rabbuck>
						<Bunnies_Microbunny>0.05</Bunnies_Microbunny>
					</value>
				</li>
				
			<!-- cold grasslands -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Steppes"]/wildAnimals</xpath>
					<value>
						<Bunnies_ChocolateRabbit>0.08</Bunnies_ChocolateRabbit>
						<Bunnies_DustBunny>0.3</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.07</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.1</Bunnies_HoptimusPrime>
						<Bunnies_Rabbuck>0.1</Bunnies_Rabbuck>
						<Bunnies_EmpireRabbit>0.05</Bunnies_EmpireRabbit>
						<Bunnies_Microbunny>0.06</Bunnies_Microbunny>
					</value>
				</li>
				
			<!-- temperate-cold desert -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_TemperateDesert"]/wildAnimals</xpath>
					<value>
						<Bunnies_DustBunny>0.2</Bunnies_DustBunny>
						<Bunnies_Hoptimus>0.08</Bunnies_Hoptimus>
						<Bunnies_HoptimusPrime>0.08</Bunnies_HoptimusPrime>
					</value>
				</li>
				
			<!-- tundra -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Permafrost"]/wildAnimals</xpath>
					<value>
						<Bunnies_Caerbunny>0.06</Bunnies_Caerbunny>
						<Bunnies_DustBunny>0.2</Bunnies_DustBunny>
						<Bunnies_HoptimusPrime>0.3</Bunnies_HoptimusPrime>
						<Bunnies_EmpireRabbit>0.2</Bunnies_EmpireRabbit>
					</value>
				</li>
				
			<!-- sparse oasis -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/BiomeDef[defName="RRP_Oasis"]/wildAnimals</xpath>
					<value>
						<Bunnies_Hoptimus>0.2</Bunnies_Hoptimus>
						<Bunnies_Microbunny>0.3</Bunnies_Microbunny>
					</value>
				</li>
					
			</operations>
		</match>
	</Operation>


</Patch>
